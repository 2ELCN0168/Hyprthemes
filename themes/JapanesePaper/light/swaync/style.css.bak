@define-color white #ffffff;
@define-color lightgrey #eaeaea;
@define-color medgrey #aeaeae;
@define-color darkgrey #424242;
@define-color darkgrey2 #2f2f2f;

* {
  font-family: JetBrainsMono Nerd Fonts;
  /* font-weight: ; */
  font-size: 12px;
}

.control-center .notification-row:focus,
.control-center .notification-row:hover {
  opacity: 1;
  background: @lightgrey;
}

.notification-row {
  outline: none;
  margin: 20px;
  padding: 0;
}

.notification {
  background: @lightgrey;
  margin: 0px;
}

.notification-content {
  background: @lightgrey;
  padding: 7px;
  border-radius: 0px;
  border: 0px solid @darkgrey;
  margin: 0;
}

.close-button {
  background: @medgrey;
  color: @lightgrey;
  text-shadow: none;
  padding: 0;
  border-radius: 0px;
  margin-top: 5px;
  margin-right: 5px;
}

.close-button:hover {
  box-shadow: none;
  background: @medgrey;
  transition: all 0.15s ease-in-out;
  border: none;
}

.notification-action {
  color: @darkgrey;
  border: 1px solid @darkgrey;
  border-top: none;
  border-radius: 0px;
  background: #32302f;
}

.notification-default-action:hover,
.notification-action:hover {
  color: #ebdbb2;
  background: #32302f;
}

.summary {
  padding-top: 7px;
  font-size: 13px;
  color: @darkgrey;
}

.time {
  font-size: 11px;
  color: @darkgrey;
  margin-right: 24px;
}

.body {
  font-size: 12px;
  color: @darkgrey;
}

.control-center {
  background: @lightgrey;
  border: 2px solid @darkgrey;
  border-radius: 0px;
}

.control-center-list {
  background: transparent;
}

.control-center-list-placeholder {
  opacity: 0.5;
}

.floating-notifications {
  background: transparent;
}

.blank-window {
  background: alpha(black, 0.1);
}

.widget-title {
  color: @darkgrey;
  background: none;
  padding: 5px 10px;
  margin: 10px 10px 5px 10px;
  font-size: 1.5rem;
  border-radius: 0px;
  border-bottom: 1px solid @darkgrey;
}

.widget-title > button {
  font-size: 1rem;
  color: @medgrey;
  text-shadow: none;
  background: @noti-bg;
  box-shadow: none;
  border-radius: 0px;
}

.widget-title > button:hover {
  background: none;
}

.widget-dnd {
  background: @lightgrey;
  padding: 5px 10px;
  margin: 5px 10px 10px 10px;
  border-radius: 0px;
  font-size: large;
  color: @darkgrey;
}

.widget-dnd > switch {
  border-radius: 4px;
  background: @lightgrey;
}

.widget-dnd > switch:checked {
  background: @medgrey;
  border: 1px solid @medgrey;
}

.widget-dnd > switch slider {
  background: @medgrey;
  border-radius: 0px;
}

.widget-dnd > switch:checked slider {
  background: @darkgrey;
  border-radius: 0px;
}

.widget-label {
  margin: 10px 10px 5px 10px;
}

.widget-label > label {
  font-size: 1rem;
  color: @medgrey;
}

.widget-mpris {
  color: @lightgrey;
  background: @medgrey;
  padding: 5px 10px 0px 0px;
  margin: 5px 10px 5px 10px;
  border-radius: 0px;
}

.widget-mpris > box > button {
  border-radius: 5px;
}

.widget-mpris-player {
  padding: 5px 10px;
  margin: 10px;
}

.widget-mpris-title {
  font-weight: 700;
  font-size: 1.25rem;
}

.widget-mpris-subtitle {
  font-size: 1.1rem;
}

.widget-buttons-grid {
  font-size: x-large;
  padding: 5px;
  margin: 5px 10px 10px 10px;
  border-radius: 0px;
  background: none;
}

.widget-buttons-grid > flowbox > flowboxchild > button {
  margin: 3px;
  background: none;
  border-radius: 0px;
  color: @text-color;
}

.widget-buttons-grid > flowbox > flowboxchild > button:hover {
  background: none;
  color: @lightgrey;
}

.widget-menubar > box > .menu-button-bar > button {
  border: none;
  background: transparent;
}

.topbar-buttons > button {
  border: none;
  background: transparent;
}
